@model BookViewModel;


<h1>Here you can create a new note</h1>
<hr />

<div class="row">
    <div class="col-6">

        <div class="card">

            <div class="card-header">
                <h5>Here you can fill info about new note:</h5>
            </div>

            <div class="card-body">

                <form asp-controller="Test" asp-action="CreateNote" method="post">
                    <div class="mb-3">
                        <label class="form-label">Id</label>
                        <input asp-for="Id" type="number" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Surname</label>
                        <input asp-for="Surname" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Father's name</label>
                        <input asp-for="FathName" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone number</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Adress</label>
                        <input asp-for="Adress" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Extra information</label>
                        <input asp-for="Description" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>

                    </div>

                </form>


            </div>

            <div class="card-footer">

            </div>



        </div>

    </div>
</div>